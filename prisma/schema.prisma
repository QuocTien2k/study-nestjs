generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum UserRole {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique(map: "User_email_key")
  password  String
  name      String?
  phone     String?   // ðŸ‘ˆ thÃªm field má»›i (optional)
  role      UserRole @default(USER) // ðŸ‘ˆ QUAN TRá»ŒNG
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

